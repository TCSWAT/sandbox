<style>
  .services-list {
    padding-top: 1vh;
  }

  .service-box {
    display:flex;
    align-items:center;
    margin-left: 5vh;
  }

  .service-logo {
    width: 10vh;
    margin-left: 3vh;
  }

  .service-desc {
    margin-left: 6vh;
    margin-top: 1vh;
    display: block;
  }

</style>
<div class="services-list">
  <% @services.each do |service| %>
    <div class='service-box'>
      <div class="service-desc">
        <div>
          <%= service.name %>
        </div>
        <div>
          <p> <%= link_to('View details', service_path(id: service.id)) %> </p>
        </div>
      </div>
    </div>
    <hr>

  <% end %>
